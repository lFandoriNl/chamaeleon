{
  "name": "@chameleon/react-editor",
  "private": true,
  "version": "0.0.0",
  "description": "Chameleon react editor",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "module": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit",
    "test": "vitest"
  },
  "dependencies": {
    "react": "18.2.0",
    "@chameleon/core": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "18.2.15",
    "tsconfig": "workspace:*",
    "tailwind-config": "workspace:*",
    "tsup": "^7.2.0"
  }
}
