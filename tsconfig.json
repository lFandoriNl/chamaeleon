{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
    "paths": {
      "@chameleon/plugin": ["./packages/plugin/src"],
      "@chameleon/plugin/*": ["./packages/plugin/src/*"],
      "@chameleon/uikit": ["./packages/uikit/src"],
      "@chameleon/uikit/*": ["./packages/uikit/src/*"],
      "@chameleon/component-library-manager": [
        "./packages/component-library-manager/src"
      ],
      "@chameleon/component-library-manager/*": [
        "./packages/component-library-manager/src/*"
      ]
    }
  },
  "references": [
    {
      "path": "apps/builder"
    },
    {
      "path": "packages/engine"
    }
  ]
}
